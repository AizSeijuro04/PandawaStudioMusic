<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <ImageView
        android:src="@drawable/logo"
        android:layout_gravity="center_horizontal"
        android:layout_width="200dp"
        android:layout_height="150dp"/>
    
    <LinearLayout
        android:orientation="vertical"
        android:padding="8dp"
        android:background="@drawable/rounded_dialog"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <TextView
            android:text="Konfirmasi Penyewaan Studio Pandawa !"
            android:textAllCaps="true"
            android:textSize="15dp"
            android:fontFamily="@font/geelactix"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Booking Information"
            android:layout_marginTop="18dp"
            android:fontFamily="@font/geelactix"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/ic_note_black"
                android:layout_gravity="bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/txt_booking_time_text"
                android:text="10h00 at 09/10/2021"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:layout_marginLeft="4dp"
                android:fontFamily="@font/geelactix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/ic_baseline_music_video_black"
                android:layout_gravity="bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/txt_booking_studios_text"
                android:text="Studio Biasa"
                android:textSize="14sp"
                android:layout_marginLeft="4dp"
                android:textColor="@color/white"
                android:fontFamily="@font/geelactix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <View
            android:layout_marginTop="4dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <TextView
            android:id="@+id/txt_studio_name"
            android:layout_marginTop="10dp"
            android:text="Pandawa Studio Music"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:fontFamily="@font/geelactix"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/ic__web_black"
                android:layout_gravity="bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/txt_studio_website"
                android:text="https://youtube.com/pandawa"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:layout_marginLeft="4dp"
                android:fontFamily="@font/geelactix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/ic_phone_black"
                android:layout_gravity="bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/txt_studio_phone"
                android:text="088211996450"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:layout_marginLeft="4dp"
                android:fontFamily="@font/geelactix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/ic_clock_black"
                android:layout_gravity="bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/txt_studio_open_hours"
                android:text="8h00 - 00h00"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:layout_marginLeft="4dp"
                android:fontFamily="@font/geelactix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/ic_location_black"
                android:layout_gravity="bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/txt_studio_address"
                android:text="Jl. H. Mading No.08,Kembangan Utara, Kec. Kembangan, Kota Jakarta Barat"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:layout_marginLeft="4dp"
                android:fontFamily="@font/geelactix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <Button
            android:id="@+id/btn_confirm"
            android:text="CONFIRM"
            android:layout_marginTop="8dp"
            android:background="@color/gray"
            android:textColor="@color/white"
            android:fontFamily="@font/geelactix"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </LinearLayout>

</LinearLayout>